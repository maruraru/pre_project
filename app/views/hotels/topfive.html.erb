<div class="topHotels">
  <h2>Top hotels</h2>
  <div class="contain">
    <div class="container">

      <% @hotels.each do |hotel| %>
      <div class="row">
        <div class="col-md-6">  <%= image_tag hotel.photo.thumb.url %></div>
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-12">
              <h3><%= hotel.title %></h3>
              <% if hotel.comments.any? %>
              <p class="raiting"><%= hotel.comments.average(:localrate).round(2) %></p> 
              <% else %>
              0.0
              <% end %> 
              <p class="gray">
               <%= hotel.location.country %>, <%= hotel.location.state %>, <%= hotel.location.city %>
               <%= hotel.location.street %> street, <%= hotel.location.house %> 
             </p>
             <%= link_to 'Show', hotel_path(hotel), :class => 'btn btn-success' %>
           </div>
        </div>
       </div>
     </div>
     <hr>
     <% end %>
   </div>
 </div>
</div>