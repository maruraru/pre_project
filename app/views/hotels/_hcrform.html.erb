<div class="addHotel">
  <div class="addingForm">
<%= simple_nested_form_for @hotel do |f| %>
  <h1>Adding form</h1>
  <% if @hotel.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@hotel.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @hotel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
            <div class="form-inputs">
              <%= f.label :title  %><br>
              <%= f.text_field :title, :class => 'form-control', placeholder: "Title of hotel"  %> <br>
              <%= f.label :photo %><br>
              <%= f.file_field:photo,  :class => 'form-control'  %> <br>
            </div>
            <div class="form-inputs">
              <%= f.label :breakfast %>
              <%= f.check_box :breakfast %>
            </div>

  <%= f.simple_fields_for :location do |p|%>
    <p><%= p.input :country, :as => :string , placeholder: "Country" %></p>
    <p><%= p.input :state , placeholder: "State"  %></p>
    <p><%= p.input :city, placeholder: "City"  %></p>
    <p><%= p.input :street, placeholder: "Street"  %></p>
    <p><%= p.input :house, placeholder: "Building"  %></p>
  <% end %>



  <h3>Rooms</h3>
  <div id="rooms">
    
    <%= f.simple_fields_for :rooms do |room| %>
      <%= render 'room_fields', f: room %>
    <% end %>

    <div class="links">
      <%= link_to_add_association 'add room', f, :rooms %>
    </div>

  </div>



<%= f.button :submit, :class => 'btn btn-success'%>
  <%= link_to 'Return on main page', home_index_path,:class => 'btn btn-light'%>  
<% end %>
</div>
</div>