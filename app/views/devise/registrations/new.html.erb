<div class="regPageBg">
  <div class="contain">
    <div class="container">
      <div class="row">
        <div class="col-md-6 enterDesc">
          <h2>Make your choice with us</h2>
          <p>At HOTEL BROWSER, we believe in the power of travel â€” and in helping you make the most of every trip. With over  million candid traveler reviews, we can help you make the right choice when you shop for hotels attractions. </p>
        </div>
        <div class="col-md-6">
          <div class="registrationBlock">
              <h2>Sign up</h2>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
              <%= f.label :username  %><br>
              <%= f.text_field :username, :class => 'form-control' %> <br>
              <%= f.label :email  %><br>
              <%= f.email_field :email, required: true, autofocus: true, :class => 'form-control' %> <br>
              
               <%= f.label :password %><br>
              <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :class => 'form-control'  %> <br>
              <%= f.label :password_confirmation %><br>
              <%= f.password_field :password_confirmation, required: true, :class => 'form-control'  %> <br>
               <%= f.label :photo %><br>
              <%= f.file_field:photo,  :class => 'form-control'  %> <br>
            </div>

<!--                 <%= f.input :username %>

                 <%= f.input :email, required: true, autofocus: true %>
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  <%= f.input :password_confirmation, required: true %>
                 

                  <%= f.input :photo %>
                

              
            -->
                <div class="form-actions">
                  <%= f.button :submit, "Sign up", :class =>'btn btn-success' %>
                <%= render "devise/shared/links" %>
                 <%= link_to 'Return on main page', home_index_path,:class => 'btn btn-light'%>
               </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>